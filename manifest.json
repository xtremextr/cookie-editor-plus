{
	"manifest_version": 3,
	"name": "Cookie Editor Plus",
	"short_name": "Cookie Editor",
	"version": "2.9.8",
	"author": "X",
	"description": "Manage your Cookies chrome-wide, fast switch between profiles and domains and securely share your cookies with whoever you want.",
	"offline_enabled": true,
	"minimum_chrome_version": "102",
	"background": {
		"service_worker": "cookie-editor.js",
		"type": "module"
	},
	"action": {
		"default_icon": {
			"16": "icons/cookie-16-filled.png",
			"19": "icons/cookie-19-filled.png",
			"32": "icons/cookie-32-filled.png",
			"48": "icons/cookie-48-filled.png"
		},
		"default_title": "Cookie-Editor Plus",
		"default_popup": "interface/popup/cookie-list.html"
	},
	"side_panel": {
		"default_path": "interface/sidepanel/cookie-list.html"
	},
	"devtools_page": "interface/devtools/devtool.html",
	"options_ui": {
		"page": "interface/options/options-v2.html",
		"open_in_tab": true
	},
	"permissions": [
		"cookies",
		"tabs",
		"storage",
		"sidePanel"
	],
	"host_permissions": [],
	"optional_host_permissions": [
		"<all_urls>"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"interface/theme/*.css",
				"interface/popup/*.css",
				"interface/lib/*.js",
				"interface/sprites/*.svg"
			],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "icons/cookie-16-filled.png",
		"19": "icons/cookie-19-filled.png",
		"32": "icons/cookie-32-filled.png",
		"48": "icons/cookie-48-filled.png",
		"128": "icons/cookie-128-filled.png"
	},
	"incognito": "split"
}